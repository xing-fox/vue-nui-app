.content {
  height: calc(100vh - 80rpx);
  line-height: 1;
  padding: 80rpx 24rpx 0;
  background: #f5f5f5;
}
.content .header {
  width: 100%;
  height: 150rpx;
  text-align: center;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  position: relative;
}
.content .header .header-image {
  width: 100%;
  height: 100%;
}
.content .header .header-photo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #e5e5e5;
  position: absolute;
  top: -60rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
}
.content .header .header-name {
  color: #fff;
  font-size: 28rpx;
  position: absolute;
  top: 80rpx;
  left: 0;
  right: 0;
  z-index: 1;
}
.content .main {
  margin-top: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-radius: 10rpx;
  -webkit-box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.03);
          box-shadow: 0 -2rpx 4rpx rgba(0, 0, 0, 0.03);
  overflow: hidden;
  background: #fff;
}
.content .main .list {
  width: 100%;
  height: 90rpx;
  border-bottom: 1px solid #eee;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  -webkit-align-content: center;
      -ms-flex-line-pack: center;
          align-content: center;
}
.content .main .list:nth-last-child(1) {
  border: none;
}
.content .main .list .list-icon {
  width: 50rpx;
  height: 50rpx;
}
.content .main .list .list-arrow {
  width: 30rpx;
  height: 30rpx;
}
.content .main .list .list-text {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
  font-size: 28rpx;
  margin-left: 10rpx;
}

